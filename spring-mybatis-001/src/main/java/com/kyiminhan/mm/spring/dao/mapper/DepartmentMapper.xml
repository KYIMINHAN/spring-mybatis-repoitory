<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.kyiminhan.mm.spring.dao.mapper.DepartmentMapper">
	<cache />

	<insert id="save" useGeneratedKeys="true" keyProperty="id"
		keyColumn="id"
		parameterType="com.kyiminhan.mm.spring.entity.Department"
		flushCache="true" statementType="PREPARED" timeout="20">

		INSERT INTO
		DEPARTMENT
		(DEPARTMENTNAME)
		VALUE
		(#{departmentName})
	</insert>

	<update id="update"
		parameterType="com.kyiminhan.mm.spring.entity.Department"
		flushCache="true" statementType="PREPARED" timeout="20">

		UPDATE DEPARTMENT
		SET
		DEPARTMENTNAME = #{departmentName}
		WHERE ID = #{id}
	</update>

	<select id="findById" parameterType="Integer"
		resultType="com.kyiminhan.mm.spring.entity.Department"
		flushCache="true" statementType="PREPARED" timeout="20">

		SELECT *
		FROM
		DEPARTMENT
		WHERE ID = #{ID}

	</select>

	<delete id="delete"
		parameterType="com.kyiminhan.mm.spring.entity.Department"
		flushCache="true" statementType="PREPARED" timeout="20">

		DELETE
		FROM
		DEPARTMENT
		WHERE ID = #{id}
	</delete>

	<select id="getAll" resultType="hashmap">
		SELECT * FROM DEPARTMENT
	</select>
</mapper>